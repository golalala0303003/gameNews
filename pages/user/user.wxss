/* 整体背景和文本 */
page {
  background-color: #f7f7f7; /* 淡灰背景 */
}

.userinfo {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-bottom: 1px solid #e0e0e0; /* 模块间的分割线 */
}

/* 头像列 */
.pictureColumn {
  width: 250rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  margin-right: 20rpx;
}

.user_picture {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 3px solid #333; /* 头像的边框 */
  background-color: #ddd;
}

.user_lv {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

/* 用户信息列 */
.infoColumn {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background-color: #fff;
}

.info_text {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
}

/* 功能栏 */
.functionBar {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.fucBar {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1); /* 给功能块添加轻微的阴影 */
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #e0e0e0; /* 每个模块的边框 */
}

.fuctext {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
