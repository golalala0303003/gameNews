.tabBartop{
  display: flex;
  flex-direction: row;
  justify-content:start;
}
.tab{
  margin-top: 0rpx;
  margin-left: 0rpx;
  width:100rpx ;
  height: 70rpx;
  font-size: 38rpx;
}
.tab_highlight{
  font-size: 43rpx;
  font-weight: bold;
}
.orderContainer{
  height: 1260rpx;
  background-color: rgb(255, 255, 255);
}
.newsTitleImage{
  width: 100%;
  height: 400rpx;
}
.newsTitleText{
  font-weight: bold;
  font-size: 50rpx;
}
.newsCreater{
  font-size: 30rpx;
  margin-top: 5rpx;
  margin-bottom: 20rpx;
}
.functionBar{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 120rpx;
  z-index: 999;
  border: 1rpx solid rgba(204, 204, 204, 0.205);  
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-direction: column;
}
.commentForm{
  background-color: rgb(255, 255, 255);
  margin: 10rpx;
  height: 200rpx;
  border: 1px solid #ccc;  
  background-color: #f8f8f8;  
}
.inputComment{
  margin-left: 25rpx;
  margin-top: 15rpx;
  width: 500rpx;
  height: 90rpx;
  background-color: #f8f8f8;  
}
.submit-btn {
  background-color: #333;  
  color: white; 
  padding: 12px 24px;
  border-radius: 4px;
  font-size: 18px;
  border: none;
  position: fixed;
  bottom: 15rpx;
  right: 1rpx;
}